# Git Secrets Configuration File
# This file contains patterns and configurations for detecting secrets in git repositories

# Common secret patterns to detect
patterns:
  - name: "AWS Access Key"
    pattern: "AKIA[0-9A-Z]{16}"
    description: "AWS Access Key ID"
  
  - name: "AWS Secret Key"
    pattern: "[0-9a-zA-Z/+]{40}"
    description: "AWS Secret Access Key"
  
  - name: "GitHub Token"
    pattern: "ghp_[0-9a-zA-Z]{36}"
    description: "GitHub Personal Access Token"
  
  - name: "GitLab Token"
    pattern: "glpat-[0-9a-zA-Z_-]{20,}"
    description: "GitLab Personal Access Token"
  
  - name: "Private Key"
    pattern: "-----BEGIN (RSA |DSA |EC |PGP )?PRIVATE KEY-----"
    description: "Private Key"
  
  - name: "SSH Key"
    pattern: "ssh-(rsa|dss|ed25519) [A-Za-z0-9+/]+"
    description: "SSH Public/Private Key"
  
  - name: "API Key Generic"
    pattern: "[aA][pP][iI]_?[kK][eE][yY].*['\"][0-9a-zA-Z]{32,45}['\"]"
    description: "Generic API Key"
  
  - name: "Database URL"
    pattern: "(mysql|postgres|mongodb)://[^\\s]+"
    description: "Database Connection String"

# File patterns to exclude from scanning
exclude_patterns:
  - "*.log"
  - "*.tmp"
  - ".git/*"
  - "node_modules/*"
  - "venv/*"
  - "__pycache__/*"
  - "*.pyc"
  - ".DS_Store"

# Directories to scan
scan_directories:
  - "."
  - "src/"
  - "config/"
  - ".claude/"

# Configuration options
config:
  case_sensitive: false
  scan_hidden_files: true
  max_file_size: "10MB"
  output_format: "json"
  
# Allowlist for known false positives
allowlist:
  - "example_api_key_placeholder"
  - "your-token-here"
  - "replace-with-actual-token"