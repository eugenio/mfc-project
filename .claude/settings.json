{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pixi run .claude/hooks/pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "pixi run .claude/hooks/send_event.py --source-app mfc-project --event-type PreToolUse --summarize"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pixi run .claude/hooks/post_tool_use.py"
          },
          {
            "type": "command",
            "command": "pixi run .claude/hooks/send_event.py --source-app mfc-project --event-type PostToolUse --summarize"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pixi run .claude/hooks/notification.py --notify "
          },
          {
            "type": "command",
            "command": "pixi run .claude/hooks/send_event.py --source-app mfc-project --event-type Notification --summarize"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pixi run .claude/hooks/stop.py --chat"
