    "git_guardian_integration": true
  },
  "gitlab": {
    "enabled": true,
    "url": "https://gitlab-runner.tail301d0a.ts.net",
    "project_id": "4",
    "default_branch": "main",
    "features": {
      "auto_issue_on_hook_failure": true,
      "auto_mr_on_multiple_commits": true,
