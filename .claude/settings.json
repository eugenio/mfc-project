          {
            "type": "command",
            "command": "pixi run .claude/hooks/send_event.py --source-app mfc-project --event-type SubagentStop"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pixi run .claude/hooks/send_event.py --source-app mfc-project --event-type PreCompact"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
